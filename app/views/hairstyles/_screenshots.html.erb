<div class="carousel slide carousel-fade carousel-hairstyles hide-xs mb-3" id="carousel" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= link_to(image_url(@screenshots.first, skip_pipeline: true)) do %>
        <%= image_tag(@screenshots.first, skip_pipeline: true) %>
      <% end %>
    </div>
    <% @screenshots.drop(1).each do |screenshot| %>
      <div class="carousel-item">
        <%= link_to(image_url(screenshot, skip_pipeline: true)) do %>
          <%= image_tag(screenshot, skip_pipeline: true) %>
        <% end %>
      </div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

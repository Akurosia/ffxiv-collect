        <div class="d-flex">
          <div class="d-none d-sm-block mr-4">
            <%= safe_image_tag("mounts/large/pickorpokkur.png", class: 'image-large') %>
          </div>
          <div class="d-flex flex-column flex-info">
            <div class="d-flex flex-wrap">
              <div>
                <dt><%= t('mounts.movement') %></dt>
                <dd>Terrestrial</dd>
              </div>
              <div>
                <dt><%= t('tradeable') %></dt>
                <dd><%= fa_check(false) %></dd>
              </div>
              <div>
                <dt>
                  <%= t('owned') %>
                  <span data-toggle="tooltip" title="Active public characters who own this mount.">
                    <%= fa_icon('question-circle') %>
                  </span>
                </dt>
                <dd>
                  <%= fa_check(false, false) %>
                  0%
                </dd>
              </div>
              <div>
                <dt><%= t('patch') %></dt>
                <dd>6.9</dd>
              </div>
            </div>
            <dt><%= t('source') %></dt>
            <dd>â€¢ A Joke Gone Too Far</dd>
            <dt><%= t('description') %></dt>
            <dd>Summon forth a pickorpokkur, which is unsurprisingly full of vinegar.</dd>

<% title('Collection Statistics - Most Rare') %>
<% description("#{@profile.name} (#{@profile.server})") %>
<% image(@profile.avatar) %>

<div class="d-flex justify-content-around mb-3">
  <div class="btn-group">
    <%= link_to 'Most Recent', stats_recent_character_path(@profile), class: 'btn btn-secondary' %>
    <%= button_tag 'Most Rare', class: 'btn btn-secondary active', disabled: true %>
  </div>
</div>

<%= render 'statistics' %>

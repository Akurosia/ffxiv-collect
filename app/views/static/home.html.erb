  <div class="col-12 col-xl-10 offset-xl-1">
    <div class="jumbotron py-4 mb-3">
      <h1 class="display-4">FFXIV Collect</h1>
      <p class="lead"><%= t('home_page.lead') %></p>
      <hr class="my-4">
      <h5><%= t('home_page.feature1') %></h5>
      <p><%= t('home_page.description1') %></p>
      <h5><%= t('home_page.feature2') %></h5>
      <p><%= t('home_page.description2') %></p>

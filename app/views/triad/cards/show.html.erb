<% title(@card.name) %>
<% description(@card.description.truncate(150)) %>
<% image(image_url("cards/large/#{@card.id}.png", skip_pipeline: true)) %>

<div class="row">
  <div class="col-12 col-lg-6 offset-0 offset-lg-3">
    <div class="card">
      <div class="card-header d-flex align-items-center justify-content-between">
        <h5 class="card-title"><%= @card.name %></h5>
        <%= card_number_badge(@card) %>
      </div>
      <div class="card-body">
        <div class="d-flex">
          <%= render 'large', card: @card %>
          <div class="d-flex flex-column ml-4">
            <div class="d-flex flex-wrap card-info">
              <% if @card.card_type_id > 0 %>
                <div class="text-center">
                  <dt><%= t('type') %></dt>
                  <dd><%= type_image(@card) %></dd>
                </div>
              <% end %>
              <div>
                <dt><%= t('records.rarity') %></dt>
                <dd><%= stars(@card) %></dd>
              </div>
              <div>
                <dt><%= t('cards.stats') %></dt>
                <dd>
                  <div class="d-flex flex-column stats">
                    <div class="d-flex justify-content-center">
                      <span><%= @card.stat(:top) %></span>
                    </div>
                    <div class="d-flex justify-content-around">
                      <span><%= @card.stat(:left) %></span>
                      <span><%= @card.stat(:right) %></span>
                    </div>
                    <div class="d-flex justify-content-center">
                      <span><%= @card.stat(:bottom) %></span>
                    </div>
                  </div>
                </dd>
              </div>
              <div>
                <%= render 'shared/ownership', collectable: @card %>
              </div>
              <div>
                <dt><%= t('cards.sale_price') %></dt>
                <dd><%= format_price(@card.sell_price) %></dd>
              </div>
              <div>
                <dt><%= t('patch') %></dt>
                <dd><%= @card.patch %></dd>
              </div>
            </div>
            <div>
              <dt><%= t('source') %></dt>
              <dd><%= sources(@card, list: true) %></dd>
            </div>
          </div>
        </div>
        <hr />
        <dt><%= t('description') %></dt>
        <dd><%= format_description(@card) %></dd>
      </div>
    </div>
  </div>
</div>
